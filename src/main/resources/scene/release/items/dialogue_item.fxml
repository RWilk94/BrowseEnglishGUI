<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="rwilk.browseenglish.release.controller.item.DialogueItem"
      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" >

  <HBox>
    <VBox>
      <Label text="Dialogue" minWidth="60">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </HBox.margin>
      </Label>
      <HBox>
        <Button text="U" onAction="#buttonUpOnAction"/>
        <Button text="D" onAction="#buttonDownOnAction"/>
        <Button text="R" onAction="#buttonRemoveOnAction"/>
        <VBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </VBox.margin>
      </HBox>
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </VBox>

    <VBox HBox.hgrow="ALWAYS">
      <Label text="DialogueLeft"/>
      <TextField fx:id="textFieldDialogueLeft" HBox.hgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="5.0" left="2.5" right="2.5" top="5.0"/>
        </VBox.margin>
      </TextField>
      <HBox.margin>
        <Insets bottom="5.0" left="2.5" right="2.5" top="5.0"/>
      </HBox.margin>
    </VBox>

    <VBox HBox.hgrow="ALWAYS">
      <Label text="DialogueRight"/>
      <TextField fx:id="textFieldDialogueRight" HBox.hgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="5.0" left="2.5" right="2.5" top="5.0"/>
        </VBox.margin>
      </TextField>
      <HBox.margin>
        <Insets bottom="5.0" left="2.5" right="2.5" top="5.0"/>
      </HBox.margin>
    </VBox>

  </HBox>

</VBox>
