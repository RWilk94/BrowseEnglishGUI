<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="rwilk.browseenglish.release.controller.item.NoteItem"
      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

  <HBox>
    <VBox>
      <Label text="Note" minWidth="60">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </HBox.margin>
      </Label>
      <HBox>
        <Button text="U" onAction="#buttonUpOnAction"/>
        <Button text="D" onAction="#buttonDownOnAction"/>
        <Button text="R" onAction="#buttonRemoveOnAction"/>
        <VBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </VBox.margin>
      </HBox>
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </VBox>

    <TextArea fx:id="textAreaNote" HBox.hgrow="ALWAYS" maxWidth="Infinity" minHeight="150">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </TextArea>
  </HBox>

</VBox>
