<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="rwilk.browseenglish.release.controller.ReleaseFormController"
      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

  <HBox>

    <Button text="Auto" onAction="#buttonAutoLoadEtutorGrammarLesson">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>


    <TextField fx:id="textFieldEtutorGrammarLessonId">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </TextField>
    <Button text="Load" onAction="#buttonLoadEtutorGrammarLesson">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>

    <Region HBox.hgrow="ALWAYS" />

    <Button text="Save" onAction="#buttonSaveEtutorGrammarReleaseLesson">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
  </HBox>

  <ScrollPane HBox.hgrow="ALWAYS" fitToHeight="true" fitToWidth="true">
    <VBox fx:id="vBoxContainer" HBox.hgrow="ALWAYS"/>
  </ScrollPane>


</VBox>
